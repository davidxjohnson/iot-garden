{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "IoT Garden Stack schema",
    "type": "object",
    "properties": {
        "stackName": {
            "type": "string",
            "minLength": 1
        },
        "devices": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "thingName": {
                        "type": "string",
                        "minLength": 1
                    },
                    "attributePayload": {
                        "type": "object",
                        "properties": {
                            "attributes": {
                                "type": "object",
                                "minProperties": 1,
                                "additionalProperties": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": [
                            "attributes"
                        ],
                        "additionalProperties": false
                    }
                },
                "required": [
                    "thingName",
                    "attributePayload"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "stackName",
        "devices"
    ],
    "additionalProperties": false
}