{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "IoT Garden Thing schema",
    "type": "object",
    "properties": {
        "thingName": {
            "type": "string",
            "minLength": 1
        },
        "attributePayload": {
            "type": "object",
            "properties": {
                "attributes": {
                    "type": "object",
                    "minProperties": 1,
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "attributes"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "thingName",
        "attributePayload"
    ],
    "additionalProperties": false
}